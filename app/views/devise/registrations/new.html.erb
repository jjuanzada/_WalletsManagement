<div class="w-3/5 mx-auto">
  <h1 class="font-bold text-4xl">Sign Up</h1>
      
    <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full" }) do |f| %>
    <div class="card bg-neutral text-neutral-content shadow-xl my-7 p-8 flex items-center">

      <div class="mt-3 w-full">
        <div class="label">
            <%= f.label :first_name, class: "label-text" %>
        </div>
        <%= f.text_field :first_name, class: "w-full input input-bordered" %>
      </div>

      <div class="mt-3 w-full">
        <div class="label">
            <%= f.label :last_name, class: "label-text" %>
        </div>
        <%= f.text_field :last_name, class: "w-full input input-bordered" %>
      </div>

      <div class="mt-3 w-full">
        <div class="label">
            <%= f.label :cpf, class: "label-text" %>
        </div>
        <%= f.text_field :cpf, class: "w-full input input-bordered" %>
      </div>

      <div class="mt-3 w-full">
        <div class="label">
            <%= f.label :email, class: "label-text" %>
        </div>
        <%= f.email_field :email, class: "w-full input input-bordered" %>
      </div>

      <div class="mt-3 w-full">
        <%= f.label :password, class: "text-lg font-semibold" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "w-full input input-bordered", autocomplete: "new-password" %>
      </div>

      <div class="mt-3 w-full">
        <div class="label">
            <%= f.label :password_confirmation, class: "label-text" %>
        </div>
        <%= f.password_field :password_confirmation, class: "w-full input input-bordered", autocomplete: "new-password" %>
      </div>

      <div class="form-control mt-7 w-full p-5">
        <%= f.submit "Create Account", class: "btn btn-primary w-full" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
