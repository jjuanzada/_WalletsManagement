<div class="navbar sticky top-0 z-30 flex h-16 w-full justify-center bg-opacity-70 backdrop-blur transition-all duration-100 
  bg-base-100 text-base-content shadow-sm">
    <div class="navbar-start">
      <% if employee_signed_in? %>
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li>  
            <%= link_to 'Home', root_path %>
          </li>
          <li>
            <%= link_to 'Users', users_path %>
          </li>
          <li>
            <%= link_to 'Add User', new_user_path %>
          </li>
          <li>
            <%= link_to 'Transactions', api_v1_all_transactions_path %>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
    <div class="navbar-center">
      <%= link_to '_WalletsManagement', root_path, class:"btn btn-ghost normal-case text-xl"%>
    </div>
    <div class="navbar-end">
      <% if employee_signed_in? %>
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar placeholder">
            <div class="bg-secondary-focus text-secondary-content rounded-full w-12">
              <span class="text-xl">
                <%= current_employee.first_name[0] %><%= current_employee.last_name[0] %>
              </span>
            </div>
          </label>
          <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
            <li>
              <%= link_to "Edit Profile", edit_employee_registration_path %>
            </li>
            <li>
              <%= button_to "Sign out", destroy_employee_session_path, method: :delete %>
            </li>
          </ul>
        </div>
      <% else %>
      <div class="flex space-x-3">
        <div>
          <%= link_to "Sign in", new_employee_session_path, class: "btn btn-ghost" %>
        </div>
        <div>
          <%= link_to "Sign up", new_employee_registration_path, class: "btn btn-outline btn-accent" %>
        </div>
      </div>
      <% end %>
    </div>
</div>