<div class="card bg-neutral text-neutral-content shadow-xl w-4/5 mx-auto p-7 my-10">
<%= form_with(model: user, class: "form-control") do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-warning w-4/5 mb-3 mx-auto" id="error_explanation">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control w-full mt-3">
    <label class="label">
      <span class="label-text">What is your name?</span>
      <%= form.label :first_name, class: "label-text-alt" %>
    </label>
    <%= form.text_field :first_name, class: "input input-bordered w-full", placeholder:"Type here" %>
  </div>

  <div class="form-control w-full mt-3">
    <label class="label">
      <span class="label-text">What is your last name?</span>
      <%= form.label :last_name, class: "label-text-alt" %>
    </label>
    <%= form.text_field :last_name, class: "input input-bordered w-full", placeholder:"Type here" %>
  </div>

  <div class="form-control w-full mt-3">
    <label class="label">
      <span class="label-text">What is your CPF?</span>
      <%= form.label :cpf, class: "label-text-alt" %>
    </label>
    <%= form.text_field :cpf, value: format_cpf(@user.cpf), class: "input input-bordered w-full", placeholder: "Type here" %>
  </div>

  <div class="form-control w-full mt-3">
    <label class="label">
      <span class="label-text">What is your email?</span>
      <%= form.label :email, class: "label-text-alt" %>
    </label>
    <%= form.text_field :email, class: "input input-bordered w-full", placeholder: "Type here" %>
</div>


  <div class="form-control w-full mt-3">
    <label class="label">
      <span class="label-text">What is your phone?</span>
      <%= form.label :phone, class: "label-text-alt" %>
    </label>
    <%= form.text_field :phone, class: "input input-bordered w-full", placeholder:"Type here" %>
  </div>
  <div class="form-control mt-7 w-full p-5">
    <%= form.submit class: "btn btn-primary" %>
  </div>
</div>
<% end %>
